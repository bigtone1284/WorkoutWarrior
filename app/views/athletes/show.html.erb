<div class='athlete-profile'>
  <%= render 'athlete_show' %>
</div>

<div>
  <% if current_user.athlete? %>
    <%= link_to 'Edit Profile', edit_athlete_path(@athlete.id), class: 'btn btn-danger', remote: true %></div>
  <% end %>
</div>
<div>
  <% if current_user.trainer? && @athlete.trainer_id.nil? %>
      <%= link_to 'Add', assign_trainer_path(athlete_id: @athlete.id, trainer_id: current_user.trainer.id), class: 'btn btn-default', method: :patch %>
  <% elsif current_user.trainer? %>
      <%= link_to 'Back', trainer_path(@trainer), class: 'btn btn-danger' %>
  <% end %>
</div>

<h1>My Programs</h1>
<div class="panel panel-default container">
  <div class="panel-body">
    <% @athlete.programs.each do |program|%>
      <ul style='list-style-type:none;'>
        <li><%= link_to program.name, program_path(program.id), class: 'btn btn-danger' %></li>
      </ul>
    <% end %>
  </div>
</div>

<div id='athlete-modal'>
</div>

