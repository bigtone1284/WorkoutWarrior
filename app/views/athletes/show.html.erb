
  <%= render 'athlete_show' %>
<div>
  <% if current_user.trainer? && @athlete.trainer_id.nil? %>
      <%= link_to 'Add athlete', assign_trainer_path(trainer_id: current_user.trainer.id, athlete_id: @athlete.id ), class: 'btn btn-default', method: :put, data: {confirm: "Are you sure you want to add '#{@athlete.name}' to your athletes?"} %>
      <%= link_to 'Back', trainer_path(@trainer), class: 'btn btn-danger' %>
  <% elsif current_user.trainer? %>
      <%= link_to 'Back', trainer_path(@trainer), class: 'btn btn-danger' %>
      <%= link_to 'Remove Athlete', remove_from_trainer_path(athlete_id: @athlete.id, trainer_id: current_user.trainer.id), method: :put, class: 'btn btn-danger' %>
  <% end %>
</div>

