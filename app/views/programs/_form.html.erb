<%= simple_form_for @program do |f| %>

  <div id="program_name_div">
    <div style="float: left;">
      <%= f.input :name %>
    </div>
    <div id="athlete_selector">
      Athlete: <%= f.select :athlete_id, @trainer.athletes.collect { |a| [a.name, a.id] } %>
    </div>
  </div>

  <div id="routines">
    <%= f.simple_fields_for :routines do |r| %>
      <%= render 'routine_fields', :f => r %>
    <% end %>
  </div>

    <span class="links"><%= link_to_add_association 'Add an Exercise', f, :routines, class: 'btn btn-success' %></span>


  <%= f.submit %>
<% end %>
