<%= link_to "Back", programs_path, class: 'btn btn-info btn-xs' %>
<h1><%= @program.name %></h1>

  <% @program.routines.each do |r| %>
  <div id="program-show">
  <%= @program.athletes.any? %>
    <%= r.exercise.title %><br/>
    <%= r.exercise.description %>
    (<%= r.exercise.category %>)
    <% unless r.exercise.category == 'Cardio' %>
      sets: <%= r.sets %>
      reps: <%= r.reps %>
    <% end %>
    duration: <%= r.duration %><br/>
    <p>instrucions: <%= r.instructions %></p>
    <br/>
    <br/>
    </div>
<% end %>
<%= link_to "Edit", edit_program_path(@program), class: 'btn btn-info btn-xs' %>

<h1>Athletes Assigned to this Program</h1>
<table>
  <% @athletes.each do |athlete| %>
    <tr>
      <td><%= athlete.name %></td>
      <td><%= link_to "Profile", athlete_path(athlete), class: 'btn btn-info btn-xs' %>
    </tr>
  <% end %>
</table>
