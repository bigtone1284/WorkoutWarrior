<div class="trainer-sidebar">

    <a class="link" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      Programs
    </a>
      <div class="collapse collapse1" id="collapseExample">
        <a class="link" data-toggle="collapse" href="#collapseExample1" aria-expanded="false" aria-controls="collapseExample1">
          All Programs
        </a>

        <div class="collapse collapse2" id="collapseExample1">
          <% @programs.each do |program| %>
          <%= link_to program.name, program_path(program), remote: true %>
          <% end %>
        </div>
      </div>

<br>

    <a class="link" data-toggle="collapse" href="#collapseExample2" aria-expanded="false" aria-controls="collapseExample2">
      <%= link_to 'New Program', new_program_path, id: 'new-program-ajax', remote: true %>
    </a>
    <div class="collapse" id="collapseExample2">
    </div>

<br>

    <a class="link" data-toggle="collapse" href="#athleteExample" aria-expanded="false" aria-controls="athleteExample">
      Athletes
    </a>
    <div class="collapse collapse1" id="athleteExample">
      <% @trainer.athletes.each do |athlete| %>
        <%= link_to athlete.name, athlete_path(id: athlete.id) %>
      <% end %>
    </div>

<br>

    <a class="link" data-toggle="collapse" href="#athleteExample2" aria-expanded="false" aria-controls="athleteExample2">
      Add an Athlete
    </a>
    <div class="collapse collapse1" id="athleteExample2">
      <% @unassigned_athletes.each do |athlete| %>
      <%= link_to athlete.name, assign_trainer_path(athlete_id: athlete.id, trainer_id: current_user.trainer.id), remote: true, method: :put %>
      <% end %>
    </div>

</div>

<div id="modal">
</div>
